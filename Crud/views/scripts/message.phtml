<div class="messages">
<?php
  if (isset($this->messageTypes) && count($this->messageTypes) > 0) {
    foreach ($this->messageTypes as $type => $messages) { ?>
      <div class="<?php echo $type ?>">
        <?php foreach ($messages as $message): ?>
          <?php echo $this->translate($message) ?>
        <?php endforeach ?>
      </div>
    <?php }
  } ?>
</div>